<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <h3>Content</h3>
  <div id="blocks" data-cocooned-options="<%= { reorderable: true }.to_json %>">
    <%= form.fields_for :blocks do |block_form| %>
      <%= render 'composite_content/block/form', f: block_form %>
    <% end %>

    <div class="links">
      <%= cocooned_add_item_link 'Add a heading', form, :blocks,
                                 partial: 'composite_content/block/form',
                                 wrap_object: Proc.new { |b| b.blockable = CompositeContent::Blocks::Heading.new; b } %>
      <%= cocooned_add_item_link 'Add a quote', form, :blocks,
                                 partial: 'composite_content/block/form',
                                 wrap_object: Proc.new { |b| b.blockable = CompositeContent::Blocks::Quote.new; b } %>
      <%= cocooned_add_item_link 'Add a text', form, :blocks,
                                 partial: 'composite_content/block/form',
                                 wrap_object: Proc.new { |b| b.blockable = CompositeContent::Blocks::Text.new; b } %>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
